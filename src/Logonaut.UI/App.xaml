<Application x:Class="Logonaut.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Merge converters FIRST so they are available to others -->
                <ResourceDictionary Source="Converters.xaml"/>
                <!-- Load default theme -->
                <ResourceDictionary Source="/Logonaut.Theming;component/Themes/DarkTheme.xaml"/>
                <ResourceDictionary Source="FilterTemplates.xaml"/>
                <!-- Load Custom Control Styles AFTER the theme -->
                <ResourceDictionary Source="ControlsStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
