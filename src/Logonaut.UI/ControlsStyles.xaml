<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Logonaut.UI.Controls">

    <Style TargetType="controls:AnimatedSpinner">
        <!-- Use DynamicResource to pick up the brush defined in the loaded theme -->
        <Setter Property="SpinnerBrush" Value="{DynamicResource SpinnerPrimaryBrush}" />

        <!-- Setters belong directly under the Style, not inside Style.Triggers -->
       <!-- Define default thickness/speed OR use triggers based on theme properties if needed -->
        <!-- For simplicity, let's rely on theme setting these via DP inheritance,
             OR define different styles keyed by theme if needed later. -->
        <!-- Example: Set a default thickness -->
        <!-- <Setter Property="SpinnerThickness" Value="2.5" /> -->

        <!-- If you want theme-specific thickness directly here, you'd need triggers
             checking a theme property, which gets complex. Keeping thickness in
             theme files was easier IF the reference worked. Let's set it here
             for now, maybe adjust later. -->
          <!-- OPTIONAL: Example of triggering thickness based on a Theme property
               if you had one exposed somewhere, e.g., via Application.Resources -->
          <!--
          <DataTrigger Binding="{Binding Source={x:Static Application.Current}, Path=Resources[CurrentThemeKey]}" Value="Dark">
               <Setter Property="SpinnerThickness" Value="3.0" />
          </DataTrigger>
          <DataTrigger Binding="{Binding Source={x:Static Application.Current}, Path=Resources[CurrentThemeKey]}" Value="Light">
               <Setter Property="SpinnerThickness" Value="2.0" />
          </DataTrigger>
          -->
          <!-- For now, let's keep it simple and set a single thickness,
               or remove the Setter entirely if the DP default is fine -->
        <Setter Property="SpinnerThickness" Value="2.5" />
        <Setter Property="SpeedRatio" Value="1.0"/>

        <!--
        <Style.Triggers>
             <- Triggers (like DataTrigger, Trigger) would go here ->
        </Style.Triggers>
        -->
    </Style>

</ResourceDictionary>
